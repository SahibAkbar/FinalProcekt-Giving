@model List<Price>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Price" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style=" text-align: center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Money</th>
                        <th scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th style="vertical-align:middle;" scope="row">@(i+1)</th>
                            <td>@Model[i].Money</td>
                            <td>
                                <a class="btn btn-success" asp-area="admin" asp-controller="Price" asp-action="Update" asp-route-id="@Model[i].Id">Update</a>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="Price" asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>