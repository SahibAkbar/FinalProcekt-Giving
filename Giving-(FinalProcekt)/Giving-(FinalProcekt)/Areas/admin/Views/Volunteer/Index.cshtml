@model List<Volunteer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Volunteer" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style="text-align:center;">
                    <tr>
                        <th style="text-align:center" scope="col">#</th>
                        <th style="text-align:center" scope="col">Image</th>
                        <th style="text-align:center" scope="col">Name</th>
                        <th style="text-align:center" scope="col">Position</th>
                        <th style="text-align:center" scope="col">Description</th>
                        <th style="text-align:center" scope="col">Experience</th>
                        <th style="text-align:center" scope="col">DonaterTitle</th>
                        <th style="text-align:center" scope="col">DonaterCount</th>
                        <th style="text-align:center" scope="col">VoluteerTitle</th>
                        <th style="text-align:center" scope="col">DonaterCount</th>
                        <th style="text-align:center" scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.Count + 1; i++)
                    {
                    <tr>
                        <th scope="row" style="vertical-align:middle;">@i</th>
                        <td><img src="~/Uploads/@Model[i-1].Image" style="width: 100px" alt="Alternate Text" /></td>
                        <td style="text-align:center">@Model[i - 1].Name</td>
                        <td style="text-align:center">@Model[i - 1].Position</td>
                        <td style="text-align:center">@Html.Raw(Model[i - 1].Description != null && Model[i - 1].Description.Length > 100 ? Model[i - 1].Description.Substring(0, 100) + "..." : Model[i - 1].Description)</td>
                        <td style="text-align:center">@Model[i - 1].Experience</td>
                        <td style="text-align:center">@Model[i - 1].DonaterTitle</td>
                        <td style="text-align:center">@Model[i - 1].DonaterCount</td>
                        <td style="text-align:center">@Model[i - 1].VoluteerTitle</td>
                        <td style="text-align:center">@Model[i - 1].DonaterCount</td>
                        <td style="text-align:center">
                            <a class="btn btn-success" asp-area="admin" asp-controller="Volunteer" asp-action="Update" asp-route-id="@Model[i - 1].Id">Update</a>
                            <a class="btn btn-warning" asp-area="admin" asp-controller="Volunteer" asp-action="Detail" asp-route-id="@Model[i - 1].Id">Detail</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Volunteer" asp-action="Delete" asp-route-id="@Model[i - 1].Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>}

                </tbody>
            </table>
        </div>
    </div>
</div>

