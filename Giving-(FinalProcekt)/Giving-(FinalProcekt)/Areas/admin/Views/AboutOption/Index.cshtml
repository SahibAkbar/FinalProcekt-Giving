@model List<AboutOption>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="AboutOption" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style="text-align:center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Title</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.Count + 1; i++)
                    {
                        <tr>
                            <th style="vertical-align:middle;" scope="row">@i</th>
                            <td>@Model[i-1].Icon</td>
                            <td>@Model[i - 1].Title</td>
                            <td>@Model[i - 1].Subtitle</td>
                            <td>
                                <a class="btn btn-success mb-1" asp-area="admin" asp-controller="AboutOption" asp-action="Update" asp-route-id="@Model[i-1].Id">Update</a>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="AboutOption" asp-action="Delete" asp-route-id="@Model[i-1].Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>