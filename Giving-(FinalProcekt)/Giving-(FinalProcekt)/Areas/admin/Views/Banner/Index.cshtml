@model List<Banner>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="position: absolute;">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Banner" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead style="text-align:center;">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col"><i class="icon-note menu-icon"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < Model.Count + 1; i++)
                    {
                <tr>
                    <th style="vertical-align:middle;" scope="row">@i</th>
                    <td><img src="~/Uploads/@Model[i - 1].Image" style="width: 100px" alt="Alternate Text" /></td>
                    <td>@Model[i - 1].Name</td>
                    <td>
                        <a class="btn btn-success mb-1" asp-area="admin" asp-controller="Banner" asp-action="Update" asp-route-id="@Model[i-1].Id">Update</a>
                        <a class="btn btn-danger" asp-area="admin" asp-controller="Banner" asp-action="Delete" asp-route-id="@Model[i-1].Id" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

